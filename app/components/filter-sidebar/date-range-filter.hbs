<FilterSidebar::Filter @id={{@id}} @label={{@label}}>
    <AuDateRangePicker
      @width="block"

      id={{@id}}
      @label={{@label}}
      
      @start={{this.start}}
      @end={{this.end}}
      
      @cancelAction={{action this.resetDate}}
      @applyAction={{action this.dateChange}}
      @hideAction={{action this.hideDate}}

      @cancelLabel="Reset"
    />
</FilterSidebar::Filter> 
