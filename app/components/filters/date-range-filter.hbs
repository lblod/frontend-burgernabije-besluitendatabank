{{#if this.isChoosingPresets}}
  <AuFormRow>
    <AuLabel for="date-period">Selecteer een periode</AuLabel>
    <PowerSelect
      @selected={{this.selectedPreset}}
      @options={{this.presets}}
      @onChange={{this.handleSelectionChange}}
      @allowClear={{true}}
      @placeholder="Alle periodes"
      @triggerId="date-period"
      class="au-u-1-1"
      as |preset|
    >{{preset}}</PowerSelect>

    <Filters::DateRangeFilter::ToggleButton
      @icon="calendar"
      @onClick={{this.chooseCustomRange}}
      class="au-u-margin-top-tiny"
    >
      Eigen periode kiezen
    </Filters::DateRangeFilter::ToggleButton>
  </AuFormRow>
{{else}}
  <AuFormRow>
    <AuLabel for="date-from">Startdatum</AuLabel>
    <Filters::DateRangeFilter::DateInput
      @onBlur={{this.handleBlur}}
      @value={{this.start}}
      @onChange={{this.handleStartDateChange}}
      id="date-from"
    />
  </AuFormRow>
  <div>
    <AuFormRow>
      <AuLabel for="date-until">Einddatum</AuLabel>
      <Filters::DateRangeFilter::DateInput
        @value={{this.end}}
        @onBlur={{this.handleBlur}}
        @onChange={{this.handleEndDateChange}}
        @onError={{this.isInvalidDateRange}}
        id="date-until"
      />
    </AuFormRow>

    <Filters::DateRangeFilter::ToggleButton
      @icon="nav-up-down"
      @onClick={{this.choosePresets}}
    >
      Bestaande periodes
    </Filters::DateRangeFilter::ToggleButton>
  </div>

  {{#each this.errorMessages as |message|}}
    <AuPill @skin="error" @size="small" @icon="info-circle">
      {{message}}
    </AuPill>
  {{/each}}
{{/if}}
