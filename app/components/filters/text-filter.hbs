<Filters::Filter @id={{@id}} @label={{@label}} @labelHidden={{@labelHidden}} @rowClass={{@rowClass}}>
    <AuInput
        {{!template-lint-disable no-duplicate-id}}
        id={{@id}}
        @type={{"text"}}

        @width="block"

        @value={{@value}}
        placeholder={{@placeholder}}

        class={{@inputClass}}


        @icon={{@icon}}
        @iconAlignment="right"
    />
    {{yield}}
    {{#if @buttonText}}
        <AuButton
            {{!-- au-u-flex--center centers the text --}}
            class="{{@inputClass}}"
            @width="block"
            {{on "click" this.onChange}}
        >
            {{@buttonText}}
        </AuButton>
    {{/if}}
</Filters::Filter>
