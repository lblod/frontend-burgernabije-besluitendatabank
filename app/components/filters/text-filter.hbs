<Filters::Filter @id={{@id}} @label={{@label}}>
  <input
    {{!template-lint-disable no-duplicate-id}}
    id={{@id}}
    type="text"
    value={{@value}}
    placeholder={{@placeholder}}
    class="au-c-input au-c-input--block {{@inputClass}}"
    {{on "input" (perform this.onChange)}}
  />
</Filters::Filter>