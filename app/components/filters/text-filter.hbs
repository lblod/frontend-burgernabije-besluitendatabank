<Filters::Filter @id={{@id}} @label={{@label}}>
    <AuInput
        {{!template-lint-disable no-duplicate-id}}
        id={{@id}}
        @type={{"text"}}

        @width="block"

        @value={{@value}}
        placeholder={{@placeholder}}

        class={{@inputClass}}


        @icon={{@icon}}
        @iconAlignment="right"
    />
    {{yield}}
    {{#if @buttonText}}
        <AuButton
            {{!-- au-u-flex--center centers the text --}}
            class="{{@inputClass}} au-u-1-5 au-u-padding-left au-u-padding-right au-u-flex--center"
            {{on "click" this.onChange}}
        >
            {{@buttonText}}
        </AuButton>
    {{/if}}

</Filters::Filter>
