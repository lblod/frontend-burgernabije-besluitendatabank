<article
  class="c-decision-card"
>
  <AuHeading @level="1" @skin="5">
    <AuLink
      class="c-decision-card__link"
      @route="detail"
      @model={{@item.id}}
    >
      {{@item.title}}
    </AuLink>
  </AuHeading>
  {{#if @item.description}}
    <p class="au-u-base c-decision-card__content">{{@item.description}}</p>
  {{/if}}
  <div class="c-decision-card__footer au-u-margin-top-tiny">
    {{@item.session.dateFormatted}}
    -
    {{@item.session.name}}
    -
    {{@item.session.municipality}}
  </div>
</article>
