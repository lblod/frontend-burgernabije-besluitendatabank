<LinkTo

  class="au-u-margin-bottom-small component-decision-card"
  @route="detail"
  @model={{@item.id}}
>
  <AuCard
    @size="small"
    class="card-hover au-u-padding-bottom au-u-padding component-decision-card-card"
    as |c|
  >

    <c.header>
      <AuHeading @level="1" @skin="3">
        <AuLink
          class="component-decision-card-header-link"
          {{! template-lint-disable no-inline-styles}}
          style="text-overflow: ellipsis; max-height: 50%;"
          @route="detail"
          @model={{@item.id}}
        >
          {{@item.title}}
        </AuLink>
      </AuHeading>
    </c.header>
    <c.content>
      {{#if @item.description}}
        <p class="truncate">{{@item.description}}</p>
      {{/if}}
    </c.content>
    <c.footer>
      {{@item.session.dateFormatted}}
      -
      {{#if @item.session.governingBody.name}}
        {{@item.session.governingBody.name}}
      {{else}}
        Geen Bestuurorgaan
      {{/if}}
      -
      {{#if @item.session.governingBody.administrativeUnit.name}}
        {{@item.session.governingBody.administrativeUnit.name}}
      {{else}}
        Geen Bestuurseenheid
      {{/if}}
    </c.footer>
  </AuCard>
</LinkTo>
