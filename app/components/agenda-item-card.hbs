<article>
  <AuHeading @level="2" @skin="5">
    <AuLink @route="agenda-items.agenda-item" @model={{@id}}>
      {{@title}}
    </AuLink>
  </AuHeading>
  {{#if @description}}
    <p class="au-u-base">{{@description}}</p>
  {{/if}}
  <div class="au-u-margin-top-tiny">
    {{@date}}
    -
    {{@governingBodyName}}
    -
    {{@municipality}}
  </div>
</article>
