{{page-title this.model.name}}

<div class="au-u-flex" style="height: 100%;width: 100%">
  <section
    id="detail-left-section"
    class="au-u-flex au-u-flex--column"
    style="height: 100%; width: 100%"
  >

    <div
      class="au-u-padding-left-large au-u-padding-right-large au-u-flex"
      style="height: 100%;"
    >
      <section
        id="detail-left-section"
        class="au-o-flow au-u-flex au-u-flex--column au-u-padding"
        style="height: 100%; width: 50%;"
      >
        <AuToolbar @size="medium" class="au-u-margin-small" as |Group|>

          <Group>
            <ul class="au-c-list-horizontal au-c-list-horizontal--small">
              <li class="au-c-list-horizontal__item">
                <AuLink @route="home" @icon="arrow-left">
                  Agendapunten
                </AuLink>
              </li>
              <li class="au-c-list-horizontal__item">
                <section
                  class="au-o-flow au-u-flex au-u-flex--column"
                  style="height: 100%;"
                >

                </section>
              </li>
            </ul>
          </Group>
        </AuToolbar>

        <section
          class="au-o-flow au-u-flex au-u-flex--column"
          style="height: 100%;"
        >
          {{#if this.model.agenda_items}}

            {{#each this.model.agenda_items as |item|}}
              <DecisionCard
                @id={{item.id}}
                @title={{item.title_agenda.value}}
                @body={{item.description.value}}
                @approvedDate={{item.approveddate}}
                @startDate={{item.geplandeStart.value}}
                @endDate={{item.enddate}}
                @municipality={{item.eenheid_werkingsgebied_label.value}}
              />
            {{/each}}
          {{else}}
            <p>no data</p>
          {{/if}}
        </section>
        <AuToolbar style="margin-top: auto;" @size="large" @nowrap={{true}}>
          <div class="au-c-pagination">

            <div class="au-c-pagination__list-item">
              <AuButton
                @skin="link"
                @icon="nav-left"
                @iconAlignment="left"
                {{on "click" this.previousPage}}
              >Vorige pagina</AuButton>
            </div>
            <p>

              <span class="au-u-hidden-visually">Resultaten</span>

              <strong>
                {{this.entriesStart}}
                -
                {{this.entriesEnd}}
              </strong>
              van 18
            </p>

            <div class="au-c-pagination__list-item">
              <AuButton
                @skin="link"
                @icon="nav-right"
                @iconAlignment="right"
                {{on "click" this.nextPage}}
              >Volgende pagina</AuButton>

            </div>
          </div>
        </AuToolbar>
      </section>
      <section
        id="detail-left-section"
        class="au au-u-flex au-u-flex--column au-u-background-gray-100 au-u-padding"
        style="height: 100%; width: 50%;"
      >
        <AuHeading @level="1" @skin="3">

          Gemeenteraadsleden
        </AuHeading>
        <ParticipantCard />
        <ParticipantCard />
        <ParticipantCard />
        <ParticipantCard />
        <ParticipantCard />
        <ParticipantCard />
      </section>
    </div>
  </section>
</div>
