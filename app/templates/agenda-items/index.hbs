<AuModalContainer />
<AuBodyContainer>
  <div class="c-interface">
    <div
      id="filtercontent"
      class="c-interface__content c-interface__content--fixed au-u-flex au-u-flex--column"
    >
      <FilterContent
        @keyword={{this.keyword}}
        @handleDateSortChange={{this.handleDateSortChange}}
        @showFilter={{this.showFilter}}
        @filterService={{this.filterService}}
      />
      <InfiniteListAgendaItemWrapper @loader={{this.itemsService}} />
    </div>
    <FilterSidebarWrapper
      @hasFilter={{this.hasFilter}}
      @hideFilter={{this.hideFilter}}
    />
  </div>
</AuBodyContainer>